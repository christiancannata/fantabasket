{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Competizione list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Timestamp</th>
                <th>Lastupdatetimestamp</th>
                <th>Tipo</th>
                <th>Statoattuale</th>
                <th>Descrizione</th>
                <th>Maxpartecipanti</th>
                <th>Avatar</th>
                <th>Modalitamercato</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('competizione_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nome }}</td>
                <td>{% if entity.timestamp %}{{ entity.timestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.lastUpdateTimestamp %}{{ entity.lastUpdateTimestamp|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.statoAttuale }}</td>
                <td>{{ entity.descrizione }}</td>
                <td>{{ entity.maxPartecipanti }}</td>
                <td>{{ entity.avatar }}</td>
                <td>{{ entity.modalitaMercato }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('competizione_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('competizione_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('competizione_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
