{% extends "AcmeDemoBundle:Demo:layout.html.twig" %}

{% block body -%}



    <div class="m-12 bg-dark-blue">
        <div class="big-heading bg-dark-blue">
            <h1>Lista Squadra Reale</h1>
        </div>
    </div>


    <section class="bg-dark-blue">

        <div class="m-06">
            <div class="module-content">
                <table class="records_list">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('squadrareale_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.nome }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('squadrareale_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('squadrareale_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li>
                        <a href="{{ path('squadrareale_new') }}">
                            Create a new entry
                        </a>
                    </li>
                </ul>


            </div>
        </div>
    </section>








{% endblock %}
